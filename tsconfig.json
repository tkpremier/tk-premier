{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "outDir": "build",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    // "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "sourceMap": true,
    "incremental": true,
    "declarationMap": true
  },
  "allowSyntheticDefaultImports": true,
  "esModuleInerop": true,
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/app.ts", "db/dev/*.ts"],
  "exclude": [
    "node_modules",
    ".storybook",
    "ckeditor",
    "dist",
    "build",
    "webpack.client.js",
    "webpack.config.js",
    "src/stories"
  ],
  "typeRoots": ["src/@types", "node_modules/@types"]
}
